<table class="damage-log-table">
    <tr>
        <th></th>
        <th class="num">{{localize "damage-log.old"}}</th>
        <th class="num">{{localize "damage-log.diff"}}</th>
        <th class="num">{{localize "damage-log.new"}}</th>
    </tr>
    {{#with temp}}
    {{#if diff }}
    <tr>
        <td>Temp</td>
        <td class="num">{{old}}</td>
        <td class="num">{{numberFormat diff sign=true}}</td>
        <td class="num">{{new}}</td>
    <tr>
    {{/if}}
    {{/with}}
    {{#with value}}
    {{#if diff }}
    <tr>
        <td>HP</td>
        <td class="num">{{old}}</td>
        <td class="num">{{numberFormat diff sign=true}}</td>
        <td class="num">{{new}}</td>
    </tr>
    {{/if}}
    {{/with}}
</table>
